<Window
    x:Class="WpfPaging.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfPaging"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:WpfPaging.ViewModels"
    Title="Furniture Shop"
    Width="1920"
    Height="1080"
    DataContext="{Binding MainViewModel, Source={StaticResource ViewModelLocator}}"
    mc:Ignorable="d" Icon="Images/Group 11.png"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Frame Content="{Binding PageSource}" NavigationUIVisibility="Hidden"  VerticalAlignment="Center" Height="1080" Width="1920" />
    </Grid>
</Window>
